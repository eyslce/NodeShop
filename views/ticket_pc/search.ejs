<%include head %>

<!------网站中部------>
<article id="cbox">

	<!------今日新品------>
	<div class="w1205 middle">
		<section>
			<div class="floor-list">
				<div class="goods-choice">
					<span class="choice-title left">您搜索的 > </span>
					<div class="choice-condite left">
						<div class="choice-item left">
							<span class="choice-matter">关键词：<b><%=serach_name%></b><i class="iconfont">&#xe663;</i></span>
						</div>
						<p class="choice-num left">为您找到<b><%=result.total_page%></b>款商品</p>
					</div>
					<div class="choice-right right"><a href="/goods/search?serach_name=<%=serach_name%>"><i class="iconfont">&#xe667;</i>清除所有条件</a></div>
					<div class="clear"></div>
				</div>
				<div class="goods-type-filter">
					<div class="goods-type">
						<label class="goods-label">商品分类：</label>
						<ul class="goods-type-cage">
							<li><a href="/cage?category_id=0">全部</a></li>
                            <% for(var i in all_category){ %>
							<li><a href="/cage?category_id=<%=all_category[i].cid%>"><%=all_category[i].cname%></a></li>
                            <% }%>
						</ul>
					</div>
				</div>
				<div class="sort">
					<a class="sort-nav sort-curn">综合</a><a class="sort-nav">销量</a><a class="sort-nav">价格<span><i class="up_triangle"></i><i class="down_triangle"></i></span></a><a class="sort-nav">最新</a>
					<a class="sort-chose sort-checked"><i></i>只看特卖商城</a><a class="sort-chose"><i></i>只看天猫/淘宝</a>
				</div>
				<div class="floor-goods">
					<ul class="goods-list">
                        <% var item = result.data; %>
                        <% for(var i in item){%>
						<li>
							<div class="goods-pic">
								<a href="<%=item[i].click_url%>"><img src="<%=item[i].pic%>" /></a>
								<p class="ticket-tab">优惠券<%=item[i].ticket_price%>元</p>
							</div>
							<h3 class="goods-name"><a href="<%=item[i].click_url%>"><%=item[i].title%></a></h3>
							<div class="goods-price left">
								<div class="new-price">
									<span class="left sell-prb">￥</span>
									<label class="left sell-prb"><%=item[i].price%></label>
								</div>
								<div class="old-price">
									<p>￥<%=item[i].org_price%></p><i class="icon-fan">包邮</i>
								</div>
							</div>
							<div class="gray-icon">
                                <% if(item[i].is_tmall == 1){ %>
								<a  data-source="天猫" href="<%=item[i].click_url %>" target="_blank"><i class="m-icon"></i>天猫</a>
                                <% }else{ %>
								<a  data-source="淘宝" href="<%=item[i].click_url %>" target="_blank"><i class="t-icon"></i>淘宝</a>
                                <% } %>
								<span>销量:<%=item[i].sales_num%></span>
							</div>
							<div class="goods-tips">
								<a><i></i>已缴保证金</a>
								<a><i></i>进群领红包</a>
							</div>
							<div class="red-package-tips">
                                <% if(item[i].commission_plan > item[i].commission_queqiao){
									var final_price = item[i].price * item[i].commission_plan/100;
								}else{
									var final_price = item[i].price * item[i].commission_queqiao/100;
								}
									var price = Math.floor(final_price * 0.7);price = price<1?1:price;%>
								<a href="#"><span>返现金红包</span>
									<span><em><%=price%></em>元</span></a>
							</div>
						</li>
                        <% }%>
					</ul>
				</div>
			</div>
			<div class="page">
				<div class="page-return">
					<a class="on">1</a><a>2</a><a>3</a><a>4</a><a>5</a><a class="prv-page">上一页</a><a class="next-page">下一页</a>
				</div>
			</div>
		</section>

	</div>
</article>

<%include foot %>