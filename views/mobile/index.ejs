<body>
<div class="app">
	<div class="head">
		<!--头部-->
		<div class="head-content">
			<span class="left"><i class="iconfont">&#xe835;</i></span>
			<div class="search">
                <form action="/mobile/search" method="get">
				<input type="text" name="search_name" placeholder="输入关键词搜索" />
				<button type="submit"><i class="iconfont top-search-btn">&#xe7f8;</i></button>
                </form>
			</div>
			<span class="right"><i class="iconfont">&#xe6a1;</i></span>
		</div>
	</div>
	<div class="bg-weixin">
		<div id="weixin-code">
			<div class="member-close-tag"><i class="iconfont">&#xe803;</i></div>
			<div class="member-top-title"><i class="iconfont">&#xe819;</i>点击二维码长按关注<i class="iconfont">&#xe819;</i></div>
			<img src="ticket_pc/images/load-ewm.jpg" class="member-center-pic">
			<div class="member-bottom-title">关于我们公众号</div>

		</div>
	</div>
	<!--回到顶部 start-->
	<div class="go-top">
		<p class="go-top-text"><i class="iconfont go-top-arrow">&#xe7f0;</i></p>
	</div>
	<!--回到顶部 end-->
	<div class="main">
		<!--轮播幻灯片start-->
		<!-- Swiper -->
		<div class="swiper-container">
			<div class="swiper-wrapper">
				<div class="swiper-slide"><a href=""><img src="mobile/img/b01.jpg"></a></div>
				<div class="swiper-slide"><a href=""><img src="mobile/img/b02.jpg"></a></div>
				<div class="swiper-slide"><a href=""><img src="mobile/img/b03.jpg"></a></div>
			</div>
			<div class="swiper-pagination"></div>
		</div>
		<!--轮播幻灯片end-->
		<!--内容区-->
		<div class="top-nav">
			<ul id="top-nav">
				<li class="active">
					<span><i class="iconfont icon-xinnew">&#xe6f5;</i></span>
					<span>最新推荐</span>
				</li>
				<li>
					<span><i class="iconfont icon-miaosha">&#xe730;</i></span>
					<span>9.9包邮</span>
				</li>
				<li>
					<span><i class="iconfont icon-paihang">&#xe724;</i></span>
					<span>销量排行</span>
				</li>
				<li>

					<span><i class="iconfont icon-quanbu">&#xe786;</i></span>
					<span>全部分类</span>
				</li>
			</ul>
		</div>
		<!--全部分类内容 start-->
		<div class="all-goods-classify">
			<ul>
                <% for(var i in all_category){ %>
				<li><a href="/mobile/cage?category_id=<%=all_category[i].cid%>"><%=all_category[i].cname%></a></li>
                <% }%>
			</ul>
		</div>
		<!--全部分类内容 end-->

		<!--加载商品列表 -->
        <div class="recommend"> </div>

		<!--加载分页数据 -->
		<div class="next-page">
			<a class="call_more">
				召唤更多
			</a>
		</div>

	</div>
	<!--foot-->
	<div class="foot">
		<span class="copyright">狸淘网neetao.com 版权所有</span>
	</div>
	<div class="bottom-nav" id="bottom-nav">
		<ul>
			<li>
				<a class="hover" href="/mobile/index">
					<span class="bottom-icon iconfont">&#xe835;</span>
					<span>首页</span>
				</a>
			</li>
			<li>
				<a href="/mobile/redpacket">
					<span class="bottom-icon iconfont">&#xe681;</span>
					<span>领红包</span>
				</a>
			</li>
			<li>
				<a href="/mobile/hot?orderBy=sales_num&direction=desc">
					<span class="bottom-icon iconfont">&#xe717;</span>
					<span>热销</span>
				</a>
			</li>
		</ul>
	</div>

</div>

<!--遮罩层-->
<% include ayer %>
<script type="text/javascript" src="mobile/js/goods.js"></script>
<script>
    var swiper = new Swiper('.swiper-container', {
        pagination: '.swiper-pagination',
        paginationClickable: true,
        spaceBetween: 30,
        centeredSlides: true,
        autoplay: 2500,
        autoplayDisableOnInteraction: false,
        noSwiping:true,
        loop: true,
    });
</script>

